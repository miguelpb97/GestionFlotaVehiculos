<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MenuAdminActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_app_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="96dp"
            android:src="@drawable/ic_logo_app" />

        <TextView
            android:id="@+id/tv_bienvenida_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo_app_admin"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_gestionar_usuarios_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_bienvenida_admin"
            android:layout_marginStart="155dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/fondo"
            android:drawableLeft="@drawable/ic_person"
            android:drawableTint="@color/color_app"
            android:fontFamily="sans-serif"
            android:text="@string/gestionar_usuarios"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:background="@drawable/boton_custom_transparente"
            app:strokeColor="@color/color_app"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_gestionar_alquileres_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/boton_gestionar_usuarios_admin"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/fondo"
            android:drawableLeft="@drawable/ic_rental_24"
            android:drawableTint="@color/color_app"
            android:fontFamily="sans-serif"
            android:text="@string/gestionar_alquileres"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:background="@drawable/boton_custom_transparente"
            app:strokeColor="@color/color_app"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_gestionar_vehiculos_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/boton_gestionar_alquileres_admin"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/fondo"
            android:drawableLeft="@drawable/ic_car"
            android:drawableTint="@color/color_app"
            android:fontFamily="sans-serif"
            android:text="@string/gestionar_vehiculos"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:background="@drawable/boton_custom_transparente"
            app:strokeColor="@color/color_app"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_gestionar_perfil_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/boton_gestionar_vehiculos_admin"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="54dp"
            android:backgroundTint="@color/fondo"
            android:drawableLeft="@drawable/ic_assignment_ind"
            android:drawableTint="@color/color_app"
            android:fontFamily="sans-serif"
            android:text="@string/gestionar_perfil"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:background="@drawable/boton_custom_transparente"
            app:strokeColor="@color/color_app"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_cerrar_sesion_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/boton_gestionar_perfil_admin"
            android:layout_marginStart="225dp"
            android:layout_marginEnd="225dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_logout"
            android:drawableTint="@color/black"
            android:fontFamily="sans-serif"
            android:text="@string/cerrar_sesion"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>